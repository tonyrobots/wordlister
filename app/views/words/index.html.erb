<p id="notice"><%= notice %></p>

<h1>Words</h1>

<%== pagy_nav(@pagy) %>
<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Score</th>
      <th>Source</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= word.score %></td>
        <td><%= if word.source 
          link_to word.source.name, word.source 
        end
        %></td>

        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%== pagy_nav(@pagy) %> <br />
<%= link_to 'New Word', new_word_path %>
